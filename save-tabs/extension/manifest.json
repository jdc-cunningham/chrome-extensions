{
    "name": "Save Tabs",
    "version": "1.0",
    "description": "Save your active tabs by a topic. Later you can reference or open the same tabs.",
    "permissions": ["storage"],
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "16": "icon16_dark.png",
        "48": "icon48_dark.png",
        "128": "icon128_dark.png"
    }
}